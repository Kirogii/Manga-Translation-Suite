{
  "manifest_version": 3,
  "name": "Manga OCR Overlay (V2)",
  "version": "1.1",
  "description": "Overlays translations from href-linked image URLs using FastAPI + YOLO.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Run Manga OCR"
  }
}
