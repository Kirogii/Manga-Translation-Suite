{
  "manifest_version": 3,
  "name": "Manga OCR Overlay",
  "version": "1.1",
  "description": "Overlays translations from href-linked image URLs using FastAPI + YOLO.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost:8000/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Run Manga OCR"
  }
}
